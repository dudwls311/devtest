<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
	
    <!-- 실행환경에서 빈이름 참조(EgovAbstractDAO) -->
	<bean id="egov.lobHandler" class="org.springframework.jdbc.support.lob.DefaultLobHandler" lazy-init="true" />

	<!-- Mybatis setup for Mybatis Database Layer -->
	<!-- <bean id="egov.sqlSession" class="org.mybatis.spring.SqlSessionFactoryBean"> -->
	<bean id="egov.sqlSession" class="exts.com.config.RefreshableSqlSessionFactoryBean">		
		<property name="dataSource" ref="egov.dataSource"/>
		<property name="configLocation" value="classpath:/exts/mapper/mapper-config.xml" />
		<property name="configurationProperties">
			<props>
				<!-- <prop key="scrKey">${Globals.DB.scrKey}</prop> -->
			</props>
		</property>
		
		<property name="mapperLocations">
			<list>
				<value>classpath:/exts/mapper/com/*_${Globals.DbType}.xml</value>
				<value>classpath:/exts/mapper/cpf/**/*_${Globals.DbType}.xml</value>
			</list>
		</property>
		<property name="interval" value="2000" /> <!-- mapper xml 파일을 재로딩 하는 간격 -->
	</bean>

	<!-- Mybatis Session Template -->
	<bean id="egov.sqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="egov.sqlSession"/>
	</bean>
</beans>